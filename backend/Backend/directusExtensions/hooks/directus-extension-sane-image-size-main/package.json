{
	"name": "directus-extension-sane-image-size",
	"description": "This extension modifies big images on upload to a preset maximum (width, height & quality).",
	"icon": "extension",
	"version": "1.1.0",
	"keywords": [
		"directus",
		"directus-extension",
		"directus-custom-hook"
	],
	"type": "module",
	"directus:extension": {
		"type": "hook",
		"path": "index.js",
		"source": "src/index.js",
		"host": "^10.8.3"
	},
	"scripts": {
		"build": "directus-extension build",
		"dev": "directus-extension build -w --no-minify",
		"link": "directus-extension link"
	},
	"devDependencies": {
		"@directus/extensions-sdk": "^10.3.0"
	}
}
